<body><center>
  
<% if User.find_by(id: session[:user_id]).nil? or User.find_by(id: session[:user_id]).email != @user.email then%>
<%=controller.redirect_to user_path(@user)%>
<%end%>

            <!-- Taula amb 3 files: una pel menu
                                    una que conté una taula generada dinàmicament on surten els ítems
                                    una amb els links del final de la pàgina
            -->
<table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">

    <!-- Fila menu -->
    <tr>
        <td bgcolor="#ff6600">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
                <tr>
                    <td style="width:18px;padding-right:4px">
                        <%= image_tag("LogoFiberNews.png", width: '18px', height: '18px', :style => "border:1px solid white") %>
                    </td>

                    <td style="line-height:12pt; height:10px;">
                       <span class="pagetop">
                           <b class="hnname">
                                  <a href=<%=submissions_path%>> Fiber News</a>
                           </b>

                              <a href=<%=newest_submissions_path%>> new</a>
                            | <a href="front">past</a> 
                            | <a href="newcomments">comments</a> 
                            | <a href=<%=ask_submissions_path%>>ask</a> 
                            | <a href="jobs">jobs</a> 
                            |  <%= link_to 'submit', new_submission_path %>


                       </span>
                    </td>
                    
                    <td style="text-align:right;padding-right:4px;">
                       <span class="pagetop">
                           <!-- <a href="login?goto=news">login</a> -->
                           <% if User.find_by(id: session[:user_id]).nil? then%>
                           <%= link_to "Log In with Google", '/auth/google_oauth2', method: :post %>
                           <%else%>
                           <%= link_to User.find_by(id: session[:user_id]).name, edit_user_path(User.find_by(id: session[:user_id])) %>
                           <%= link_to ' | Logout' , '/sessions/logout' %>
                           <%end%>
                       </span>
                    </td>
                </tr>
            </table>
        </td>
    </tr>


<div class="profileform">
<%= form_for @user, url: {action: "update"} do |form| %>

  <table border="0"><tbody>
  
    <tr>
      <tr style="height:10px">  </tr>
        <tr> 
           <td> name </td> 
           <td><%= @user.name %></td> 
        </tr>
         
      <tr> 
        <td>email</td>
        <td><%= @user.email %></td>
      </tr>
      
      <tr> 
        <td>created</td>
        <td><%=time_ago_in_words(@user.created_at) %></td> 
      </tr>
      
      <tr> 
        <td>karma</td>
        <td><%=@user.karma %></td> 
      </tr>
        
        <tr>   
            <td><%= form.label :about %></td>
            <td ><%= form.text_area :about, size: "39x3" %> </td>
        </tr>
        
        <tr>
          <td></td>
          <td>
            <%= form.submit "Update"%>
          </td>
        </tr>
    </tr>  
   </tbody></table>
  
<% end %>
</div>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', submissions_path %>
</center></body>
