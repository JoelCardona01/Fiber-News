                                    <% else %>
                                        <a href= <%= submission_path(submission.id) %> class="titlelink"><%= submission.title%></a>
                                    <% end %>
                                </td>
                            </tr>
                            
                            <tr>
                                <td colspan="2"></td>
                                <td class="subtext">
                                    <span class="score"><%= submission.votes%> votes</span> 
                                    by <a href="" class="hnuser">SoyHardcoded</a> 
